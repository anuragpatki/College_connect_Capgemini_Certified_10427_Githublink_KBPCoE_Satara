package com.loops;

import java.util.Scanner;

public class Fact1 {

	public static void main(String[] args) {
		//1*2=2
		int num;
		double fact=1;
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter any Number = ");
		num = sc.nextInt();
		for(int i = num ; i >= 1 ; i--) {
			fact = fact*i;
			
		}
		System.out.print(fact);
		sc.close();
	}

}


